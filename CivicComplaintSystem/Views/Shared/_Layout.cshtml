@{
    var isAuthenticated = Context.User?.Identity?.IsAuthenticated ?? false;
    var isAdmin = Context.User?.IsInRole("Admin") ?? false;
    var isDepartmentManager = Context.User?.IsInRole("DepartmentManager") ?? false;
    var isTechnician = Context.User?.IsInRole("Technician") ?? false;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>CivicFix</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <style>
        .status-badge.pending { background-color: #dc3545; }
        .status-badge.inprogress { background-color: #fd7e14; }
        .status-badge.fixed { background-color: #28a745; }
    </style>
    @RenderSection("Styles", required: false)
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">CivicFix</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarsExampleDefault">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    @if (isAuthenticated)
                    {
                        @if (isAdmin)
                        {
                            <!-- Admin Navigation -->
                            <li class="nav-item"><a class="nav-link" href="/Admin">Admin Dashboard</a></li>
                            <li class="nav-item"><a class="nav-link" href="/Role">Role Management</a></li>
                            <li class="nav-item"><a class="nav-link" href="/Map/AdminMap">Map View</a></li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    Scoreboards
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="/Admin/Scoreboard">User Scoreboard</a></li>
                                    <li><a class="dropdown-item" href="/Admin/TechnicianScoreboard">Technician Scoreboard</a></li>
                                </ul>
                            </li>
                        }
                        else if (isTechnician)
                        {
                            <!-- Technician Navigation -->
                            <li class="nav-item"><a class="nav-link" href="/Technician/Dashboard">Dashboard</a></li>
                            <li class="nav-item"><a class="nav-link" href="/Technician/Scoreboard">Scoreboard</a></li>
                        }
                        else
                        {
                            <!-- User Navigation -->
                            <li class="nav-item"><a class="nav-link" href="/Complaint">My Complaints</a></li>
                            <li class="nav-item"><a class="nav-link" href="/Home/Nearby">Nearby Issues</a></li>
                            <li class="nav-item"><a class="nav-link" href="/Badge">Badges</a></li>
                            <li class="nav-item"><a class="nav-link" href="/Home/Scoreboard">Scoreboard</a></li>
                        }
                    }
                </ul>
                <ul class="navbar-nav ms-auto">
                    @if (!isAuthenticated)
                    {
                        <li class="nav-item"><a class="nav-link" href="/Account/Login">Login</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Account/Register">Register</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Account/AdminLogin">Admin Login</a></li>
                    }
                    else
                    {
                        <li class="nav-item"><a class="nav-link" href="/Account/Profile">Profile</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Account/Logout">Logout</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    <main class="container py-4">
        @RenderBody()
    </main>
    @RenderSection("Scripts", required: false)
</body>
</html>


