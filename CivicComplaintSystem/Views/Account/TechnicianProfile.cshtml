@model CivicFix.Models.User
<h2>Technician Profile</h2>
<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">Email: @Model.Email</p>
        <p class="card-text">Role: <span class="badge bg-info">Technician</span></p>
        <p class="card-text">Department: @(Model.Department?.Name ?? "Not Assigned")</p>
    </div>
    <div class="card-footer">
        <a class="btn btn-outline-primary" href="/Technician/Dashboard">Technician Dashboard</a>
        <a class="btn btn-outline-secondary" href="/Technician/Scoreboard">Scoreboard</a>
    </div>
</div>
